<?xml version="1.0" encoding="UTF-8"?>
<dialog name="manageContactsDialog" icon="/icons/user.png" text="i18n.plugins.textforms.manage.person" modal="true" resizable="true" closable="true" close="removeDialog(this)" 
		bottom="10" top="10" left="10" right="10" columns="2" gap="13">
	<label name="labelName" text="i18n.plugins.textforms.name" icon="/icons/user.png" for="textName" valign="top" />
	<textarea name="textName" height="50" rows="1" weightx="1"  />
	
	<label name="labelPhone" text="i18n.plugins.textforms.phone" icon="/icons/phone_number.png" for="textPhone" valign="top" />
	<textarea name="textPhone" rows="1" columns="50" />
		
	<label name="labelOrganization" text="i18n.plugins.textforms.organization" icon="/icons/organization.png" for="textOrganization" valign="top" />
	<textarea name="textOrganization" rows="3" columns="50" weightx="1"/>
		
	<label name="labelEmail" text="i18n.plugins.textforms.email" icon="/icons/email.png" for="textEmail" valign="top" />
	<textarea name="textEmail" rows="1" columns="50" />
		
	<button name="buttonCancel" text="i18n.action.cancel" icon="/icons/cross.png" action="removeDialog(manageContactsDialog)" weightx="1" />
	<button name="buttonSave" text="i18n.plugins.textforms.contact.save" icon="/icons/tick.png" action="saveContact(manageContactsDialog)" weightx="1" />
</dialog>