<splitpane i18n="true" name="panelManageReports" orientation="horizontal" divider="450" weightx="1" weighty="1">
	<panel columns="2" weightx="1" weighty="1" scrollable="false" gap="5">
		<label icon="/icons/search.png" for="searchSurveys" />
		<textfield name="searchSurveys" weightx="1" columns="0" action="searchSurveys(this,panelSurveys)" focusgained="focusGained(this)" focuslost="focusLost(this)"/>
		
		<panel name="panelSurveys" border="false" weightx="1" weighty="1" colspan="2" gap="10">
			<table name="tableSurveys" selection="single" weightx="1" weighty="1" />
		</panel>
		
		<panel colspan="2" gap="5" columns="3">
			<button name="buttonAddSurvey" icon="/icons/big_survey_add.png" text="i18n.plugins.surveys.survey.add" action="addSurvey()" weightx="1" />
			<button name="buttonEditSurvey" icon="/icons/big_survey_edit.png" text="i18n.plugins.surveys.survey.edit" action="editSurvey()" weightx="1" enabled="false"/>
			<button name="buttonDeleteSurvey" icon="/icons/big_survey_delete.png" text="i18n.plugins.surveys.survey.delete" action="showConfirmationDialog('deleteSurvey')" weightx="1" enabled="false"/>
		</panel>
	</panel>
	<panel gap="5" columns="1">
		<panel text="i18n.plugins.surveys.questions" columns="1" weightx="1" weighty="1" gap="15" border="true" top="8" left="8" right="8" bottom="8">
			<table name="tableQuestions" selection="single" weightx="1" weighty="1">
				<header>
					<column text="i18n.plugins.surveys.name" icon="/icons/question.png" width="175"/>
					<column text="i18n.plugins.surveys.keyword" icon="/icons/question_keyword.png" width="100"/>
					<column text="i18n.plugins.surveys.type" icon="/icons/question_type.png" width="100"/>
					<column text="i18n.plugins.surveys.schema" icon="/icons/question_schema.png" width="100"/>
					<column text="i18n.plugins.surveys.info" icon="/icons/question_info.png" width="200"/>
				</header>
			</table>
		</panel>
		<button name="buttonSendSurvey" icon="/icons/big_survey_send.png" text="i18n.plugins.surveys.survey.send" action="sendSurvey()" weightx="1" enabled="false"/>
	</panel>
</splitpane>