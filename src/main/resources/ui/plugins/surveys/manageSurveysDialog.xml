<?xml version="1.0" encoding="UTF-8"?>
<dialog name="dialogManageSurveys" icon="/icons/survey.png" text="i18n.plugins.surveys.manage.survey" modal="true" resizable="false" closable="true" close="removeDialog(this)" bottom="10" top="10" left="10" right="10" columns="2" gap="13" weighty="1">

	<label icon="/icons/survey.png" text="i18n.plugins.surveys.survey.name" for="textSurveyName" valign="top"/>
	<textfield name="textSurveyName" columns="45" weightx="1"/>
	
	<label icon="/icons/survey_keyword.png" text="i18n.plugins.surveys.survey.keyword" for="textSurveyKeyword" valign="top"/>
	<textfield name="textSurveyKeyword" columns="45" weightx="1"/>
	
	<label icon="/icons/question.png" text="i18n.plugins.surveys.questions" valign="top"/>
	<panel columns="2" gap="5" weightx="1">
		<combobox name="comboQuestions" editable="false" weightx="1" action="comboChanged(comboQuestions,buttonAddQuestion)" />
		<button name="buttonAddQuestion" icon="/icons/question_add.png" text="i18n.plugins.surveys.question.add" action="addQuestion(comboQuestions)" enabled="false" />
	
		<table name="tableQuestions" selection="single" weightx="1" weighty="1" action="tableChanged(tableQuestions, buttonDeleteQuestion)" colspan="2">
			<header>
				<column text="i18n.plugins.surveys.name" icon="/icons/question.png" width="125"/>
				<column text="i18n.plugins.surveys.keyword" icon="/icons/question_keyword.png" width="90"/>
				<column text="i18n.plugins.surveys.type" icon="/icons/question_type.png" width="80"/>
			</header>
		</table>
		<button name="buttonDeleteQuestion" icon="/icons/question_delete.png" text="i18n.plugins.surveys.question.delete" colspan="2"
				action="deleteQuestion(tableQuestions,buttonDeleteQuestion)" enabled="false" />
	</panel>
			
	<button name="buttonCancel" text="i18n.action.cancel" icon="/icons/cross.png" action="removeDialog(dialogManageSurveys)" weightx="1" />	
	<button name="buttonSave" text="i18n.plugins.surveys.survey.save" icon="/icons/tick.png" action="saveSurvey" weightx="1" />
</dialog>