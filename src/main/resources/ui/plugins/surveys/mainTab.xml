<?xml version="1.0" encoding="ISO-8859-1"?>
<tab i18n="true"  name="tabSurveys" icon="/icons/big_surveys.png" text="i18n.plugins.surveys.title">
    <panel name="panelSurveys" bottom="9" columns="2" gap="9" left="9" right="9" top="9" weightx="1" weighty="1" scrollable="false">
		<label name="labelSurveys" icon="/icons/header_surveys.png" valign="top" />
		<splitpane orientation="horizontal" divider="170" weightx="1" weighty="1">
			 <panel name="panelMenu" weightx="1" weighty="1" columns="1" top="6" left="6" right="6" bottom="6" gap="5" scrollable="false">
			 	<label name="labelTasks" text="i18n.plugins.surveys.tasks" icon="/icons/status.png" weightx="1" />
			 	<list name="listTasks" selection="single" weightx="1" weighty="1" action="taskChanged(listTasks)" >
					<item text="i18n.plugins.surveys.manage.people" icon="/icons/users.png" property="value=people" selected="true" />
					<item text="i18n.plugins.surveys.manage.questions" icon="/icons/question.png" property="value=questions"/>
					<item text="i18n.plugins.surveys.manage.surveys" icon="/icons/report.png" property="value=surveys"/>
					<item text="i18n.plugins.surveys.browse.data" icon="/icons/browse.png" property="value=data"/>
					<item text="i18n.plugins.surveys.manage.options" icon="/icons/keyword.png" property="value=options"/>
				</list>
			</panel>
			<panel name="panelMainContent" weightx="1" weighty="1" top="6" left="6" right="6" bottom="6"/>
		</splitpane>	
	</panel>
</tab>
