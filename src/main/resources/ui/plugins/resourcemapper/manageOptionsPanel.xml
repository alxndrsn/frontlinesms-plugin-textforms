<?xml version="1.0" encoding="ISO-8859-1"?>
<panel weightx="1" weighty="1" border="false" columns="1" gap="15">
	<panel gap="10" weightx="1" text="Debug Mode" border="true" columns="2" bottom="10" top="10" left="10" right="10">
		<checkbox name="checkboxDebugYes" text="Enabled" group="debug" action="debugChanged(this)"/>
		<checkbox name="checkboxDebugNo" text="Disabled" group="debug" action="debugChanged(this)" selected="true" />
	</panel>
	
	<panel gap="10" weightx="1" text="Register / Help Keywords" border="true" columns="4" bottom="10" top="10" left="10" right="10">
		<label name="labelRegister" text="Register" valign="top" />
		<panel name="panelRegister" weightx="1" columns="2" gap="8">
			<textfield name="textRegister" weightx="1" action="textOptionChanged(this, listRegister, buttonRegister)" perform="addOption(this, listRegister, buttonRegister)"/>
			<button name="buttonRegister" icon="/icons/tick.png" enabled="false" action="addOption(textRegister, listRegister, this)"/>
			<list name="listRegister" selection="single" colspan="2" weightx="1" height="75" action="deleteOption(this)"/>
		</panel>
		
		<label name="labelInfo" text="Help" valign="top" />
		<panel name="panelInfo" weightx="1" columns="2" gap="8">
			<textfield name="textInfo" weightx="1" action="textOptionChanged(this, listInfo, buttonInfo)" perform="addOption(this, listInfo, buttonInfo)"/>
			<button name="buttonInfo" icon="/icons/tick.png" enabled="false" action="addOption(textInfo, listInfo, this)"/>
			<list name="listInfo" selection="single" colspan="2" weightx="1" height="75" action="deleteOption(this)"/>
		</panel>
	</panel>
	
	<panel gap="10" weightx="1" text="Boolean Values" border="true" columns="4" bottom="10" top="10" left="10" right="10">
		<label name="labelBooleanTrue" text="True" valign="top" />
		<panel name="panelBooleanTrue" weightx="1" columns="2" gap="8">
			<textfield name="textBooleanTrue" weightx="1" action="textOptionChanged(this, listBooleanTrue, buttonBooleanTrue)" perform="addOption(this, listBooleanTrue, buttonBooleanTrue)"/>
			<button name="buttonBooleanTrue" icon="/icons/tick.png" enabled="false" action="addOption(textBooleanFalse, listBooleanTrue, this)"/>
			<list name="listBooleanTrue" selection="single" colspan="2" weightx="1" height="75" action="deleteOption(this)"/>
		</panel>
		
		<label name="labelBooleanFalse" text="False" valign="top" />
		<panel name="panelBooleanFalse" weightx="1" columns="2" gap="8">
			<textfield name="textBooleanFalse" weightx="1" action="textOptionChanged(this, listBooleanFalse, buttonBooleanFalse)" perform="addOption(this, listBooleanFalse, buttonBooleanFalse)"/>
			<button name="buttonBooleanFalse" icon="/icons/tick.png" enabled="false" action="addOption(textBooleanFalse, listBooleanFalse, this)"/>
			<list name="listBooleanFalse" selection="single" colspan="2" weightx="1" height="75" action="deleteOption(this)" />
		</panel>
	</panel>
	
	<panel gap="10" weightx="1" weighty="1" text="Upload Options" border="true" columns="2" bottom="10" top="10" left="10" right="10">
		<label name="labelUploadURL" text="URL" icon="/icons/httpRequest.png" valign="top" />
		<textfield name="textUploadURL" weightx="1" action="uploadUrlChanged(this)"/>
		
		<label name="labelUploadDocuments" text="Handler" icon="/icons/sms_http.png" valign="top" />
		<combobox name="comboUploadDocuments" editable="false" action="uploadDocumentChanged(this)" weightx="1"/>
		
		<panel name="panelUploadOptions" colspan="2" />
	</panel>
</panel>