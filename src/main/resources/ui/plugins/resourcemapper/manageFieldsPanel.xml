<?xml version="1.0" encoding="ISO-8859-1"?>
<splitpane i18n="true" name="panelManageFields" orientation="horizontal" divider="400" weightx="1" weighty="1">
	<panel name="panelLeft" columns="2" weightx="1" weighty="1" scrollable="false" gap="10">
		<label name="labelFindField" text="i18n.plugins.resourcemapper.find.field" icon="/icons/search.png" />
		<textfield name="textSearchField" columns="10" weightx="1" perform="searchFields()"/>
		
		<table name="tableFields" selection="single" colspan="2" weightx="1" weighty="1">
			<header>
				<column icon="/icons/description.png" text="i18n.plugins.resourcemapper.table.name" width="150"/>
				<column icon="/icons/tip.png" text="i18n.plugins.resourcemapper.table.abbreviation" width="100"/>
				<column icon="/icons/status.png" text="i18n.plugins.resourcemapper.table.type" width="100"/>
			</header>
		</table>	
	</panel>
	<panel name="panelRight" columns="2" weightx="1" weighty="1" gap="10" border="true" top="8" left="8" right="8" bottom="8">
		<label name="labelName" icon="/icons/description.png" text="i18n.plugins.resourcemapper.field.name" />
		<label name="labelNameValue" weightx="1" />
		
		<label name="labelAbbreviation" text="i18n.plugins.resourcemapper.field.abbreviation" icon="/icons/tip.png" />
		<label name="labelAbbreviationValue" weightx="1" />
		
		<label name="labelType" text="i18n.plugins.resourcemapper.field.type" icon="/icons/status.png" />
		<label name="labelTypeValue" weightx="1" />
		
		<label name="labelChoices" text="i18n.plugins.resourcemapper.field.choices" icon="/icons/tip.png" colspan="2" />
		<list name="listChoices" selection="single" colspan="2">
			<item text="Water Damage" />
			<item text="Fire Damage"/>
			<item text="Earthquake Damage" />
			<item text="No Damage" />
		</list>
		
		<label name="labelInfo" text="i18n.plugins.resourcemapper.field.info" icon="/icons/task_edit.png" colspan="2" />
		<textarea name="textInfo" wrap="true" editable="false" columns="40" rows="10" colspan="2" />
		
		<panel weightx="1" weighty="1" colspan="2" valign="fill" gap="10">
			<button name="buttonViewResponses" icon="/icons/email_subject.png" text="i18n.plugins.resourcemapper.view.responses" action="viewResponses()" weightx="1" valign="bottom"/>
			<button name="buttonEditPerson" icon="/icons/edit.png" text="i18n.plugins.resourcemapper.edit.field" action="editField()" weightx="1" valign="bottom"/>
		</panel>
	</panel>
</splitpane>