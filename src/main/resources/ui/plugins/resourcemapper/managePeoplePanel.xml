<?xml version="1.0" encoding="ISO-8859-1"?>
<splitpane i18n="true" name="panelManagePeople" orientation="horizontal" divider="450" weightx="1" weighty="1">
	<panel columns="4" weightx="1" weighty="1" scrollable="false" gap="5">
		<label name="labelField" icon="/icons/search.png" for="searchPerson" />
		<textfield name="searchPerson" weightx="1" columns="0" colspan="3"
			action="searchByPerson(this, tablePeople)" focusgained="textfieldFocusGained(this)" focuslost="textfieldFocusLost(this)"/>
		
		<panel name="panelPeople" border="false" weightx="1" weighty="1" colspan="4" gap="10" columns="1">
			<table name="tablePeople" selection="single" weightx="1" weighty="1"/>
		</panel>
		
		<button name="buttonAddPerson" icon="/icons/user_add.png" text="i18n.plugins.resourcemapper.add" action="addPerson(tablePeople)" weightx="1" colspan="2"/>
		<button name="buttonDeletePerson" icon="/icons/user_delete.png" text="i18n.plugins.resourcemapper.delete" action="showConfirmationDialog('deletePerson')" weightx="1" colspan="2" enabled="false"/>
	</panel>
	<panel columns="2" weightx="1" weighty="1" gap="10" border="true" top="8" left="8" right="8" bottom="8">
		<label name="labelName" text="i18n.plugins.resourcemapper.name" icon="/icons/user.png" valign="top" />
		<label name="labelNameValue" height="40" weightx="1" font="bold 12"/>
		
		<label name="labelHospital" text="i18n.plugins.resourcemapper.organization" icon="/icons/hospital.png" valign="top" />
		<label name="labelHospitalValue" weightx="1" font="bold 12" />
		
		<label name="labelPhone" text="i18n.plugins.resourcemapper.phone" icon="/icons/phone_number.png" valign="top" />
		<label name="labelPhoneValue" weightx="1" font="bold 12" />
		
		<label name="labelEmail" text="i18n.plugins.resourcemapper.email" icon="/icons/email.png" valign="top" />
		<label name="labelEmailValue" weightx="1" font="bold 12" />
		
		<label name="labelResponse" text="i18n.plugins.resourcemapper.response" icon="/icons/date.png" valign="top" />
		<label name="labelResponseValue" weightx="1" font="bold 12" />
		
		<panel weightx="1" weighty="1" colspan="2" valign="fill" gap="10">
			<button name="buttonViewResponses" icon="/icons/email_subject.png" text="i18n.plugins.resourcemapper.view.responses" action="viewResponses(tablePeople)" weightx="1" enabled="false"/>
			<button name="buttonEditPerson" icon="/icons/user_edit.png" text="i18n.plugins.resourcemapper.edit" action="editPerson(tablePeople)" weightx="1" enabled="false"/>
		</panel>
	</panel>
</splitpane>